<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCancelReminderSettingsTwo"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/btnCancelReminderSettingsTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSetReminderSettingsTwo"
        app:layout_constraintTop_toBottomOf="@+id/txtNoteReminderSettingsTwo" />

    <Button
        android:id="@+id/btnSetReminderSettingsTwo"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:text="@string/btnSetReminderSettingsTwo"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelReminderSettingsTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNoteReminderSettingsTwo" />

    <EditText
        android:id="@+id/txtNoteReminderSettingsTwo"
        android:layout_width="324dp"
        android:layout_height="290dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:hint="@string/hintNoteReminderSettingsTwo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spDayHourMinutesReminderSettingsTwo" />

    <Button
        android:id="@+id/btnDayHoursReminderSettingsTwo"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:text="@string/btnDayHourReminderSettingsTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCycleReminderSettingsTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCycleReminderSettingsTwo"
        android:layout_width="142dp"
        android:layout_height="65dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:text="@string/btnCycleReminderSettingsTwo"
        app:layout_constraintEnd_toStartOf="@+id/btnDayHoursReminderSettingsTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spDayHourMinutesReminderSettingsTwo"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toStartOf="@+id/etTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDayHoursMinutesReminderSettingsTwo" />

    <TextView
        android:id="@+id/tvDayHoursMinutesReminderSettingsTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="248dp"
        android:layout_marginRight="248dp"
        android:text="@string/lblDayHourMinutesReminderSettingsTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCycleReminderSettingsTwo" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="112dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:ems="10"
        android:hint="@string/hintTimeReminderSettingsTwo"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/spDayHourMinutesReminderSettingsTwo"
        app:layout_constraintTop_toBottomOf="@+id/btnDayHoursReminderSettingsTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>